extends layout

block content
  h1= title
  div
  form(action='/user/pass/reset/#{id}',method='post')
    div(data-role='fieldcontain')
      fieldset(data-role='controlgroup')
        label(for='email') email
           input(id='email',type='text',value='#{id}',placeholder='@',name='email')
    div#passworddiv(data-role='fieldcontain')
      fieldset(data-role='controlgroup')
        label(for='password') password
           input(id='password',type='password',value='',placeholder='',name='password')
    div(data-role='fieldcontain')
      fieldset(data-type='vertical', data-role='controlgroup')  
        label(for='showpass') show password
        input(id='showpass',type='checkbox')
    input(id='token',type='hidden',value='#{token}',name='token')
    div(data-role='fieldcontain')   
      input(type='submit',value='Reset Password',data-transition='fade', data-theme='c')
